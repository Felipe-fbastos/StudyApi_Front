@model StudyApi_Front.Models.MateriaViewModel
@{
    ViewBag.Title = "Criar Matéria";
}

<h2>Criar Nova Matéria</h2>

@using (Html.BeginForm("Create", "Materia", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />

        <!-- Nome -->
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <!-- Horas do Curso -->
        <div class="form-group">
            @Html.LabelFor(model => model.HorasDoCurso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.HorasDoCurso, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <!-- Descrição -->
        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <!-- Data de Criação -->
        <div class="form-group">
            @Html.LabelFor(model => model.DataCriacao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.DataCriacao, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <!-- Status da Matéria -->
        <div class="form-group">
            @Html.LabelFor(model => model.StatusMateria, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.StatusMateria,
                         Html.GetEnumSelectList(typeof(StudyApi_Front.Models.Enuns.StatusMateria)),
                         "---Selecione---", new { @class = "form-control" })
            </div>
        </div>

        <!-- Botão de Submit -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Criar Matéria" class="btn btn-primary" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Retornar", "Index")
</div>
